{% extends "./layout.njk" %}

{% set componentName = componentPath %}

{% set componentHtml %}
  {% include "components/" + componentName + "/" + componentName + ".njk" %}
{% endset %}

{% set componentCSS %}
  {% include "components/" +  componentName + "/" + componentName +".css" %}
{% endset %}

{% set componentJS %}
  {% include "components/" +  componentName + "/" + componentName + ".js"  ignore missing %}
{% endset %}

{% block content %}

  {% block componentDescription %}
  {% endblock %}

  <section>
    <h2>Demo</h2>
    <p>Resize the panel to view the demo in different container sizes.</p>
    <div class="demo">
      {% include "components/" + componentName + "/" + componentName + ".njk" %}
    </div>
  </section>
  <section>
    <h2>Markup</h2>
    <p>Use the tabbend navagation to view the component markup.</p>
  </section>

  <span class="visually-hidden">Use left and right arrows to navigate between tabs.</span>
  <div class="js-tab-widget tabs">
    <ul class="tab-list">
    <li class="tab-item" data-tab-active>
       <a class="tab-link" href="#html" data-tab-active aria-selected="true">HTML</a>
      </li>
      <li class="tab-item">
        <a class="tab-link" href="#css">CSS</a>
      </li>
      {% if hasJS %}
        <li class="tab-item">
          <a class="tab-link" href="#JavaScript">JavaScript</a>
        </li>
      {% endif %}
    </ul>
    <div id="tab-1" class="tab-panel">
      <h3 class="visually-hidden">HTML</h3>
      <pre id="HTML">
        <button class="button--copy button--right" data-clipboard-target="#HTML">Copy</button>
        <code>{{- componentHtml | e -}}</code>
      </pre>
    </div>
    <div id="tab-2" class="tab-panel">
      <h3 class="visually-hidden">CSS</h3>
      <pre id="CSS">
        <button class="button--copy button--right" data-clipboard-target="#CSS">Copy</button>
        <code>{{- componentCSS | e -}}</code>
      </pre>
    </div>
    {% if hasJS %}
      <div id="tab-3" class="tab-panel">
        <h3 class="visually-hidden">JavaScript</h3>
          <pre id="JavaScript">
            <button class="button--copy button--right" data-clipboard-target="#JavaScript">Copy</button>
            <code>{{- componentJS | e -}}</code>
          </pre>
      </div>
    {% endif %}
  </div>

{% endblock %}



